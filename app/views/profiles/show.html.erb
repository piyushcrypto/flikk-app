<!-- Public Creator Profile -->
<style>
  .profile-bg { background: #0a0a0a; }
  .card-bg { background: #1a1a1a; }
  
  @keyframes online-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
    50% { box-shadow: 0 0 0 8px rgba(34, 197, 94, 0); }
  }
  .online-ring { animation: online-pulse 2s infinite; }
</style>

<!-- Navbar -->
<nav class="fixed top-0 left-0 right-0 z-50 bg-[#0a0a0a]/80 backdrop-blur-md border-b border-gray-800 h-16">
  <div class="max-w-7xl mx-auto px-4 h-full flex items-center justify-between">
    <div class="flex items-center">
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <%= render 'shared/logo_icon', size: 'sm' %>
        <span class="logo-text text-xl sm:text-2xl bg-gradient-to-r from-pink-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">flik<span class="mirror-k" style="background: inherit; -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">k</span></span>
      <% end %>
    </div>

    <div class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <% if current_user.creator? %>
          <%= link_to "Dashboard", creator_dashboard_path, class: "text-gray-400 hover:text-white transition-colors text-sm" %>
        <% else %>
          <%= link_to "Dashboard", dashboard_path, class: "text-gray-400 hover:text-white transition-colors text-sm" %>
        <% end %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "text-gray-400 hover:text-white transition-colors text-sm" %>
        <%= link_to "Sign up", fan_registration_path, class: "px-4 py-2 bg-gradient-to-r from-pink-500 to-purple-600 text-white rounded-full text-sm font-bold" %>
      <% end %>
    </div>
  </div>
</nav>

<div class="pt-16 min-h-screen profile-bg">
  <!-- Cover Image -->
  <div class="relative h-48 md:h-72">
    <% if @creator.cover_image.attached? %>
      <%= image_tag @creator.cover_image, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full bg-gradient-to-br from-pink-500/30 to-purple-600/30"></div>
    <% end %>
    <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] to-transparent"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4 -mt-20 relative">
    <!-- Profile Header -->
    <div class="flex flex-col md:flex-row md:items-end md:space-x-6">
      <!-- Avatar -->
      <div class="relative">
        <div class="w-36 h-36 md:w-44 md:h-44 rounded-full overflow-hidden border-4 border-[#0a0a0a] shadow-2xl <%= @creator.is_live? ? 'online-ring' : '' %>">
          <% if @creator.avatar.attached? %>
            <%= image_tag @creator.avatar, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center">
              <span class="text-white font-bold text-5xl"><%= @creator.name.first.upcase %></span>
            </div>
          <% end %>
        </div>
        <% if @creator.is_live? %>
          <div class="absolute bottom-3 right-3 px-3 py-1 bg-red-500 rounded-full flex items-center space-x-1.5">
            <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
            <span class="text-xs font-bold text-white">LIVE</span>
          </div>
        <% end %>
      </div>

      <!-- Info -->
      <div class="flex-1 mt-4 md:mt-0">
        <div class="flex items-center space-x-3">
          <h1 class="text-3xl md:text-4xl font-bold text-white"><%= @creator.name %></h1>
          <% if @creator.category.present? %>
            <span class="px-3 py-1 bg-pink-500/20 text-pink-400 rounded-full text-sm"><%= @creator.category %></span>
          <% end %>
        </div>
        <p class="text-lg text-gray-400 mt-1"><%= @creator.display_handle %></p>
        
        <div class="flex items-center space-x-6 mt-4">
          <div>
            <span class="text-2xl font-bold text-white"><%= @creator.formatted_followers %></span>
            <span class="text-gray-400 ml-1">followers</span>
          </div>
          
          <% if @creator.instagram_handle.present? %>
            <button onclick="openInstagram('<%= @creator.instagram_url %>')" 
                    class="flex items-center space-x-2 text-pink-400 hover:text-pink-300 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              <span>Instagram</span>
            </button>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Bio -->
    <% if @creator.bio.present? %>
      <div class="mt-6 p-4 card-bg rounded-xl border border-gray-800">
        <p class="text-gray-300"><%= @creator.bio %></p>
      </div>
    <% end %>

    <!-- Services -->
    <% if @services.any? %>
      <div class="mt-8">
        <h2 class="text-xl font-bold text-white mb-4">Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @services.each do |service| %>
            <div class="card-bg rounded-xl p-5 border border-gray-800 hover:border-pink-500/50 transition-colors">
              <div class="flex items-start justify-between">
                <div>
                  <h3 class="font-bold text-white text-lg"><%= service.service_type.titleize %></h3>
                  <% if service.description.present? %>
                    <p class="text-sm text-gray-400 mt-1"><%= service.description %></p>
                  <% end %>
                </div>
                <div class="text-right">
                  <% if service.price_per_message.to_f > 0 %>
                    <p class="text-xl font-bold text-pink-400">â‚¹<%= service.price_per_message %></p>
                    <p class="text-xs text-gray-500">per message</p>
                  <% elsif service.price_per_slot.to_f > 0 %>
                    <p class="text-xl font-bold text-pink-400">â‚¹<%= service.price_per_slot %></p>
                    <p class="text-xs text-gray-500">per 30-min slot</p>
                  <% end %>
                </div>
              </div>
              
              <% if user_signed_in? && !current_user.creator? %>
                <button class="mt-4 w-full py-2 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-bold rounded-lg hover:opacity-90 transition-opacity">
                  Request Service
                </button>
              <% elsif !user_signed_in? %>
                <%= link_to fan_registration_path, class: "mt-4 block w-full py-2 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-bold rounded-lg hover:opacity-90 transition-opacity text-center" do %>
                  Sign up to Request
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Message CTA -->
    <div class="mt-8 mb-12 p-6 card-bg rounded-xl border border-gray-800 text-center">
      <h3 class="text-xl font-bold text-white mb-2">Want to connect with <%= @creator.name %>?</h3>
      <p class="text-gray-400 mb-4">Send a message or request their services!</p>
      
      <% if user_signed_in? && !current_user.creator? %>
        <button class="px-8 py-3 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-bold rounded-full hover:opacity-90 transition-opacity">
          ðŸ’¬ Send Message
        </button>
      <% elsif !user_signed_in? %>
        <%= link_to fan_registration_path, class: "inline-block px-8 py-3 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-bold rounded-full hover:opacity-90 transition-opacity" do %>
          Sign up to Connect
        <% end %>
      <% end %>
    </div>

  </div>
</div>

<!-- Instagram Modal (Desktop) / New Tab (Mobile) -->
<div id="instagram-modal" class="fixed inset-0 z-50 hidden" aria-modal="true">
  <div class="fixed inset-0 bg-black/80 backdrop-blur-sm" onclick="closeInstagramModal()"></div>
  <div class="fixed inset-4 md:inset-10 lg:inset-20 bg-white rounded-2xl overflow-hidden flex flex-col">
    <div class="p-4 border-b flex items-center justify-between">
      <span class="font-bold text-gray-900">Instagram Profile</span>
      <button onclick="closeInstagramModal()" class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    <iframe id="instagram-iframe" class="flex-1 w-full" src="" frameborder="0"></iframe>
  </div>
</div>

<script>
function openInstagram(url) {
  if (!url) return;
  
  // Check if mobile
  if (window.innerWidth < 768) {
    window.open(url, '_blank');
  } else {
    // Desktop - show modal
    const modal = document.getElementById('instagram-modal');
    const iframe = document.getElementById('instagram-iframe');
    if (modal && iframe) {
      iframe.src = url;
      modal.classList.remove('hidden');
    }
  }
}

function closeInstagramModal() {
  const modal = document.getElementById('instagram-modal');
  const iframe = document.getElementById('instagram-iframe');
  if (modal && iframe) {
    modal.classList.add('hidden');
    iframe.src = '';
  }
}
</script>

