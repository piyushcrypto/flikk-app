<!-- Chat Conversation -->
<style>
  .dashboard-bg { background: #0a0a0a; }
  .card-bg { background: #1a1a1a; }
  .message-input:focus { outline: none; }
  
  @keyframes online-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
    50% { box-shadow: 0 0 0 4px rgba(34, 197, 94, 0); }
  }
  .online-ring { animation: online-pulse 2s infinite; }

  .conversation-item:hover { background: #252525; }
  .conversation-item.active { background: #252525; border-left: 3px solid #ec4899; }

  .messages-container {
    scrollbar-width: thin;
    scrollbar-color: #374151 #1a1a1a;
  }
  .messages-container::-webkit-scrollbar { width: 6px; }
  .messages-container::-webkit-scrollbar-track { background: #1a1a1a; }
  .messages-container::-webkit-scrollbar-thumb { background: #374151; border-radius: 3px; }

  .message-bubble {
    word-wrap: break-word;
    min-width: 80px;
  }
  .message-bubble.sent {
    background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  }
  .message-bubble.received {
    background: #252525;
  }

  /* Show reaction trigger on message hover */
  .message-row:hover .reaction-trigger {
    opacity: 1 !important;
  }

  .reaction-pill {
    cursor: pointer;
  }

  @keyframes reaction-pop {
    0% { transform: scale(0); }
    50% { transform: scale(1.3); }
    100% { transform: scale(1); }
  }

  .reaction-added {
    animation: reaction-pop 0.3s ease-out;
  }

  /* Reaction picker modal animation */
  .reaction-picker-modal {
    animation: picker-appear 0.15s ease-out;
  }
  
  @keyframes picker-appear {
    from {
      opacity: 0;
      transform: scale(0.8) translateY(10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  @keyframes typing-dot {
    0%, 60%, 100% { opacity: 0.3; }
    30% { opacity: 1; }
  }
  .typing-dot { animation: typing-dot 1.4s infinite; }
  .typing-dot:nth-child(2) { animation-delay: 0.2s; }
  .typing-dot:nth-child(3) { animation-delay: 0.4s; }
</style>

