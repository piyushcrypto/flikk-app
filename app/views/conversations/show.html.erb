<script>
function initMessageChat() {
  const messagesContainer = document.getElementById('messages-container');
  const messageForm = document.getElementById('message-form');
  const messageInput = document.getElementById('message-input');
  const sendButton = document.getElementById('send-button');
  const chatArea = document.getElementById('chat-area');
  const conversationId = chatArea?.dataset.conversationId;
  const currentUserId = <%= current_user.id %>;

  // Guard against double initialization
  if (messageInput?.dataset.initialized === 'true') return;
  if (messageInput) messageInput.dataset.initialized = 'true';

  // Store pending messages for optimistic UI
  const pendingMessages = new Map();

  // Scroll to bottom
  function scrollToBottom() {
    if (messagesContainer) {
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }
  }
  scrollToBottom();

  // Enable/disable send button based on input
  if (messageInput && sendButton) {
    function updateButtonState() {
      sendButton.disabled = messageInput.value.trim() === '';
      messageInput.style.height = 'auto';
      messageInput.style.height = Math.min(messageInput.scrollHeight, 120) + 'px';
    }

    messageInput.addEventListener('input', updateButtonState);
    messageInput.addEventListener('keyup', updateButtonState);
    messageInput.addEventListener('change', updateButtonState);
    messageInput.addEventListener('paste', () => setTimeout(updateButtonState, 0));

    messageInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        if (messageInput.value.trim() !== '') {
          sendMessage();
        }
      }
    });

    updateButtonState();
  }

  // WebSocket subscription
  let subscription = null;
  
  if (conversationId && typeof App !== 'undefined' && App.cable) {
    subscription = App.cable.subscriptions.create(
      { channel: "ConversationChannel", conversation_id: conversationId },
      {
        connected() {
          console.log('Connected to conversation channel via WebSocket');
          // Update connection status indicator if needed
        },

        disconnected() {
          console.log('Disconnected from conversation channel');
        },

        received(data) {
          console.log('Received via WebSocket:', data.type);
          
          switch(data.type) {
            case 'new_message':
              // Message from another user - add to UI
              if (data.message.sender_id !== currentUserId) {
                addMessage(data.message);
                scrollToBottom();
                // Mark as read via WebSocket
                this.perform('mark_as_read', { conversation_id: conversationId });
                
                // Show desktop notification if tab is not visible
                if (document.hidden && window.FlikkNotifications) {
                  window.FlikkNotifications.notifyNewMessage(
                    data.message.sender_name,
                    data.message.content.substring(0, 50) + (data.message.content.length > 50 ? '...' : ''),
                    window.location.href
                  );
                }
              }
              break;
              
            case 'message_sent':
              // Confirmation of our sent message - update optimistic UI
              const tempEl = document.getElementById(data.temp_id);
              if (tempEl) {
                tempEl.id = `message-${data.message.id}`;
                tempEl.innerHTML = `
                  <div class="message-bubble sent rounded-2xl px-4 py-2 text-white">
                    <p class="text-sm">${escapeHtml(data.message.content)}</p>
                    <p class="text-xs opacity-70 mt-1">${formatTime(data.message.created_at)}</p>
                  </div>
                `;
              }
              pendingMessages.delete(data.temp_id);
              break;
              
            case 'error':
              // Error sending message - show error state
              if (data.temp_id) {
                const errorEl = document.getElementById(data.temp_id);
                if (errorEl) {
                  const bubble = errorEl.querySelector('.message-bubble');
                  if (bubble) {
                    bubble.classList.add('border', 'border-red-500');
                    const timeEl = errorEl.querySelector('.text-xs');
                    if (timeEl) timeEl.textContent = 'Failed to send - tap to retry';
                    errorEl.style.cursor = 'pointer';
                    errorEl.onclick = () => retryMessage(data.temp_id);
                  }
                }
              }
              console.error('Message error:', data.message);
              break;
              
            case 'typing':
              if (data.user_id !== currentUserId) {
                const indicator = document.getElementById('typing-indicator');
                if (data.is_typing) {
                  indicator?.classList.remove('hidden');
                } else {
                  indicator?.classList.add('hidden');
                }
              }
              break;
              
            case 'reaction_update':
              // Someone added/removed a reaction - update UI
              if (typeof handleReactionUpdate === 'function') {
                handleReactionUpdate(data);
              }
              break;
              
            case 'reaction_confirmed':
              // Our reaction was confirmed - update counts from server
              if (typeof updateReactionCounts === 'function') {
                updateReactionCounts(data.message_id, data.reaction_counts);
              }
              break;
          }
        },

        // Send message via WebSocket
        sendMessage(content, tempId) {
          this.perform('send_message', { 
            content: content, 
            temp_id: tempId,
            message_type: 'text'
          });
        },

        // Send typing indicator
        sendTyping(isTyping) {
          this.perform('typing', { is_typing: isTyping });
        }
      }
    );
  }

  // Send message function
  function sendMessage() {
    const content = messageInput.value.trim();
    if (!content) return;
    if (!subscription) {
      console.error('No WebSocket connection');
      // Fallback to HTTP if WebSocket not available
      sendMessageHttp(content);
      return;
    }

    const tempId = 'temp-' + Date.now();
    
    // Optimistic UI update
    const tempMessage = document.createElement('div');
    tempMessage.id = tempId;
    tempMessage.className = 'flex justify-end';
    tempMessage.innerHTML = `
      <div class="message-bubble sent rounded-2xl px-4 py-2 text-white">
        <p class="text-sm">${escapeHtml(content)}</p>
        <p class="text-xs opacity-70 mt-1">Sending...</p>
      </div>
    `;
    messagesContainer.insertBefore(tempMessage, document.getElementById('typing-indicator'));
    
    // Store pending message for retry
    pendingMessages.set(tempId, content);
    
    // Clear input
    messageInput.value = '';
    messageInput.style.height = 'auto';
    sendButton.disabled = true;
    scrollToBottom();

    // Send via WebSocket
    subscription.sendMessage(content, tempId);
  }

  // Retry failed message
  function retryMessage(tempId) {
    const content = pendingMessages.get(tempId);
    if (!content) return;
    
    // Remove failed message
    const el = document.getElementById(tempId);
    if (el) el.remove();
    
    // Resend
    messageInput.value = content;
    sendMessage();
  }

  // HTTP fallback for sending messages
  async function sendMessageHttp(content) {
    const tempId = 'temp-' + Date.now();
    
    const tempMessage = document.createElement('div');
    tempMessage.id = tempId;
    tempMessage.className = 'flex justify-end';
    tempMessage.innerHTML = `
      <div class="message-bubble sent rounded-2xl px-4 py-2 text-white">
        <p class="text-sm">${escapeHtml(content)}</p>
        <p class="text-xs opacity-70 mt-1">Sending...</p>
      </div>
    `;
    messagesContainer.insertBefore(tempMessage, document.getElementById('typing-indicator'));
    
    messageInput.value = '';
    messageInput.style.height = 'auto';
    sendButton.disabled = true;
    scrollToBottom();

    try {
      const formData = new FormData();
      formData.append('message[content]', content);
      
      const response = await fetch(messageForm.action, {
        method: 'POST',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Accept': 'application/json'
        },
        body: formData
      });

      if (response.ok) {
        const data = await response.json();
        const tempEl = document.getElementById(tempId);
        if (tempEl) {
          tempEl.innerHTML = `
            <div class="message-bubble sent rounded-2xl px-4 py-2 text-white">
              <p class="text-sm">${escapeHtml(data.content)}</p>
              <p class="text-xs opacity-70 mt-1">${formatTime(data.created_at)}</p>
            </div>
          `;
        }
      } else {
        const tempEl = document.getElementById(tempId);
        if (tempEl) {
          tempEl.querySelector('.message-bubble').classList.add('border', 'border-red-500');
          tempEl.querySelector('.text-xs').textContent = 'Failed to send';
        }
      }
    } catch (error) {
      console.error('Error sending message via HTTP:', error);
    }
  }

  // Form submit handler (use WebSocket)
  if (messageForm) {
    messageForm.addEventListener('submit', (e) => {
      e.preventDefault();
      sendMessage();
    });
  }

  // Typing indicator - debounced
  let typingTimeout = null;
  if (messageInput && subscription) {
    messageInput.addEventListener('input', () => {
      if (subscription) {
        subscription.sendTyping(true);
        
        clearTimeout(typingTimeout);
        typingTimeout = setTimeout(() => {
          subscription.sendTyping(false);
        }, 2000);
      }
    });
  }

  function addMessage(message) {
    const isOwn = message.sender_id === currentUserId;
    const div = document.createElement('div');
    div.id = `message-${message.id}`;
    div.className = isOwn ? 'flex justify-end' : 'flex justify-start';
    div.innerHTML = `
      <div class="message-bubble ${isOwn ? 'sent' : 'received'} rounded-2xl px-4 py-2 text-white">
        ${!isOwn ? `<p class="text-xs text-pink-400 mb-1">${escapeHtml(message.sender_name)}</p>` : ''}
        <p class="text-sm">${escapeHtml(message.content)}</p>
        <p class="text-xs opacity-70 mt-1">${formatTime(message.created_at)}</p>
      </div>
    `;
    messagesContainer.insertBefore(div, document.getElementById('typing-indicator'));
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  function formatTime(isoString) {
    const date = new Date(isoString);
    return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
  }
}

// Initialize on multiple events for maximum compatibility
document.addEventListener('DOMContentLoaded', initMessageChat);
document.addEventListener('turbo:load', initMessageChat);
document.addEventListener('turbo:render', initMessageChat);

if (document.readyState !== 'loading') {
  initMessageChat();
}

// Sound toggle function
function toggleNotificationSound() {
  if (!window.FlikkNotifications) return;
  
  const isEnabled = window.FlikkNotifications.isSoundEnabled();
  window.FlikkNotifications.toggleSound(!isEnabled);
  updateSoundToggleUI(!isEnabled);
}

function updateSoundToggleUI(enabled) {
  const onIcon = document.getElementById('sound-on-icon');
  const offIcon = document.getElementById('sound-off-icon');
  
  if (enabled) {
    onIcon?.classList.remove('hidden');
    offIcon?.classList.add('hidden');
  } else {
    onIcon?.classList.add('hidden');
    offIcon?.classList.remove('hidden');
  }
}

// Initialize sound toggle UI on page load
function initSoundToggle() {
  if (window.FlikkNotifications) {
    updateSoundToggleUI(window.FlikkNotifications.isSoundEnabled());
  }
}

document.addEventListener('DOMContentLoaded', initSoundToggle);
document.addEventListener('turbo:load', initSoundToggle);

// Global reaction functions (available to all messages)
const allowedEmojis = ['â¤ï¸', 'ðŸ˜‚', 'ðŸ˜®', 'ðŸ˜¢', 'ðŸ˜¡', 'ðŸ‘', 'ðŸ‘Ž', 'ðŸ”¥', 'ðŸ’¯', 'ðŸ™'];

function toggleReaction(element) {
  const emoji = element.dataset.emoji;
  const messageId = element.dataset.messageId;
  
  if (!emoji || !messageId) return;
  if (!allowedEmojis.includes(emoji)) return;
  
  const chatArea = document.getElementById('chat-area');
  const conversationId = chatArea?.dataset.conversationId;
  
  // Get subscription from App.cable
  const subscriptions = App.cable?.subscriptions?.subscriptions || [];
  const subscription = subscriptions.find(s => 
    s.identifier && s.identifier.includes(`"conversation_id":${conversationId}`)
  );
  
  if (subscription) {
    // Send reaction via WebSocket
    subscription.perform('react', { message_id: parseInt(messageId), emoji: emoji });
    
    // Optimistic UI update
    updateReactionUI(messageId, emoji, element);
  } else {
    // Fallback to HTTP
    toggleReactionHttp(messageId, emoji, element);
  }
}

function updateReactionUI(messageId, emoji, clickedElement) {
  const messageDiv = document.querySelector(`[data-message-id="${messageId}"]`);
  if (!messageDiv) return;
  
  // Check if clicked element is a reaction pill (toggling) or the picker (adding)
  const isPill = clickedElement.classList.contains('reaction-pill');
  
  if (isPill) {
    // Toggle off - check if we're removing our own reaction
    if (clickedElement.classList.contains('ring-1')) {
      clickedElement.classList.remove('ring-1', 'ring-pink-500');
      const countEl = clickedElement.querySelector('[data-count]');
      if (countEl) {
        const newCount = parseInt(countEl.textContent) - 1;
        if (newCount <= 0) {
          clickedElement.remove();
        } else {
          countEl.textContent = newCount;
        }
      }
    } else {
      // Adding our reaction to existing emoji
      clickedElement.classList.add('ring-1', 'ring-pink-500');
      const countEl = clickedElement.querySelector('[data-count]');
      if (countEl) {
        countEl.textContent = parseInt(countEl.textContent) + 1;
      }
    }
  } else {
    // Adding from picker - find or create reaction bar
    let reactionsContainer = messageDiv.querySelector('[data-reactions-container]');
    
    if (!reactionsContainer) {
      // Create reactions container
      const bubbleWrapper = messageDiv.querySelector('.relative');
      if (!bubbleWrapper) return;
      
      reactionsContainer = document.createElement('div');
      reactionsContainer.className = 'reaction-bar flex flex-wrap gap-1 mt-1';
      reactionsContainer.dataset.reactionsContainer = '';
      bubbleWrapper.insertBefore(reactionsContainer, bubbleWrapper.querySelector('.reaction-picker'));
    }
    
    // Check if emoji already exists
    let pill = reactionsContainer.querySelector(`[data-emoji="${emoji}"]`);
    
    if (pill) {
      // Toggle our reaction
      if (pill.classList.contains('ring-1')) {
        pill.classList.remove('ring-1', 'ring-pink-500');
        const countEl = pill.querySelector('[data-count]');
        if (countEl) {
          const newCount = parseInt(countEl.textContent) - 1;
          if (newCount <= 0) {
            pill.remove();
          } else {
            countEl.textContent = newCount;
          }
        }
      } else {
        pill.classList.add('ring-1', 'ring-pink-500', 'reaction-added');
        const countEl = pill.querySelector('[data-count]');
        if (countEl) {
          countEl.textContent = parseInt(countEl.textContent) + 1;
        }
      }
    } else {
      // Create new reaction pill
      pill = document.createElement('button');
      pill.className = 'reaction-pill flex items-center gap-0.5 px-2 py-0.5 rounded-full text-xs bg-gray-700/80 hover:bg-gray-600 transition-colors ring-1 ring-pink-500 reaction-added';
      pill.dataset.emoji = emoji;
      pill.dataset.messageId = messageId;
      pill.setAttribute('onclick', 'toggleReaction(this)');
      pill.innerHTML = `<span>${emoji}</span><span class="text-gray-300" data-count>1</span>`;
      reactionsContainer.appendChild(pill);
    }
  }
}

async function toggleReactionHttp(messageId, emoji, element) {
  try {
    const response = await fetch(`/messages/${messageId}/reactions`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Accept': 'application/json'
      },
      body: JSON.stringify({ emoji: emoji })
    });
    
    if (response.ok) {
      const data = await response.json();
      // Update UI based on server response
      updateReactionCounts(messageId, data.reaction_counts);
    }
  } catch (error) {
    console.error('Error toggling reaction:', error);
  }
}

function updateReactionCounts(messageId, reactionCounts) {
  const messageDiv = document.querySelector(`[data-message-id="${messageId}"]`);
  if (!messageDiv) return;
  
  let reactionsContainer = messageDiv.querySelector('[data-reactions-container]');
  
  if (!reactionsContainer && Object.keys(reactionCounts).length > 0) {
    const bubbleWrapper = messageDiv.querySelector('.relative');
    if (!bubbleWrapper) return;
    
    reactionsContainer = document.createElement('div');
    reactionsContainer.className = 'reaction-bar flex flex-wrap gap-1 mt-1';
    reactionsContainer.dataset.reactionsContainer = '';
    bubbleWrapper.insertBefore(reactionsContainer, bubbleWrapper.querySelector('.reaction-picker'));
  }
  
  if (reactionsContainer) {
    // Clear and rebuild
    reactionsContainer.innerHTML = '';
    
    for (const [emoji, count] of Object.entries(reactionCounts)) {
      const pill = document.createElement('button');
      pill.className = 'reaction-pill flex items-center gap-0.5 px-2 py-0.5 rounded-full text-xs bg-gray-700/80 hover:bg-gray-600 transition-colors';
      pill.dataset.emoji = emoji;
      pill.dataset.messageId = messageId;
      pill.setAttribute('onclick', 'toggleReaction(this)');
      pill.innerHTML = `<span>${emoji}</span><span class="text-gray-300" data-count>${count}</span>`;
      reactionsContainer.appendChild(pill);
    }
  }
}

// Handle reaction updates from WebSocket
function handleReactionUpdate(data) {
  updateReactionCounts(data.message_id, data.reaction_counts);
}
