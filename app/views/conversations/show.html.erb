// Toggle reaction when clicking on existing reaction pill
function toggleReaction(element) {
  const emoji = element.dataset.emoji;
  const messageId = element.dataset.messageId;
  
  if (!emoji || !messageId) return;
  if (!allowedEmojis.includes(emoji)) return;
  
  const chatArea = document.getElementById('chat-area');
  const conversationId = chatArea?.dataset.conversationId;
  
  const subscriptions = App.cable?.subscriptions?.subscriptions || [];
  const subscription = subscriptions.find(s => 
    s.identifier && s.identifier.includes(`"conversation_id":${conversationId}`)
  );
  
  if (subscription) {
    subscription.perform('react', { message_id: parseInt(messageId), emoji: emoji });
    
    // Optimistic toggle on pill
    if (element.classList.contains('ring-1')) {
      element.classList.remove('ring-1', 'ring-pink-500', 'bg-pink-900/30');
      const countEl = element.querySelector('[data-count]');
      if (countEl) {
        const newCount = parseInt(countEl.textContent) - 1;
        if (newCount <= 0) {
          element.remove();
        } else {
          countEl.textContent = newCount;
        }
      }
    } else {
      element.classList.add('ring-1', 'ring-pink-500', 'bg-pink-900/30', 'reaction-added');
      const countEl = element.querySelector('[data-count]');
      if (countEl) {
        countEl.textContent = parseInt(countEl.textContent) + 1;
      }
    }
  } else {
    toggleReactionHttp(messageId, emoji);
  }
}

// Optimistic UI update when adding reaction from picker
function updateReactionUIOptimistic(messageId, emoji) {
  const messageRow = document.querySelector(`.message-row[data-message-id="${messageId}"]`);
  if (!messageRow) return;
  
  const wrapper = messageRow.querySelector('.message-wrapper');
  if (!wrapper) return;
  
