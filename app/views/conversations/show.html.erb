const allowedEmojis = ['â¤ï¸', 'ðŸ˜‚', 'ðŸ˜®', 'ðŸ˜¢', 'ðŸ˜¡', 'ðŸ‘', 'ðŸ‘Ž', 'ðŸ”¥', 'ðŸ’¯', 'ðŸ™'];
let activeReactionPicker = null;

// Open the reaction picker modal
function openReactionPicker(triggerBtn, messageId) {
  // Close any existing picker
  closeAllReactionPickers();
  
  const picker = document.getElementById(`reaction-picker-${messageId}`);
  if (!picker) return;
  
  // Position the picker near the trigger button
  const rect = triggerBtn.getBoundingClientRect();
  const isOwnMessage = triggerBtn.closest('.message-row')?.querySelector('.message-bubble.sent');
  
  picker.style.top = `${rect.top - 60}px`;
  
  if (isOwnMessage) {
    picker.style.left = `${rect.left - 280}px`;
  } else {
    picker.style.left = `${rect.right + 10}px`;
  }
  
  // Make sure picker stays in viewport
  const pickerRect = picker.getBoundingClientRect();
  if (pickerRect.right > window.innerWidth) {
    picker.style.left = `${window.innerWidth - 360}px`;
  }
  if (pickerRect.left < 10) {
    picker.style.left = '10px';
  }
  
  picker.classList.remove('hidden');
  activeReactionPicker = picker;
  
  // Close on click outside
  setTimeout(() => {
