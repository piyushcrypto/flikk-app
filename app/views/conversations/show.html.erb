  }, 10);
}

function closeAllReactionPickers() {
  document.querySelectorAll('.reaction-picker-modal').forEach(p => {
    p.classList.add('hidden');
  });
  document.removeEventListener('click', closePickerOnOutsideClick);
  activeReactionPicker = null;
}

function closePickerOnOutsideClick(e) {
  if (activeReactionPicker && !activeReactionPicker.contains(e.target) && !e.target.closest('.reaction-trigger')) {
