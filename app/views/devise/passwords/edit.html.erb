<div class="min-h-screen flex">
  <!-- Left Side - Form -->
  <div class="w-full lg:w-1/2 bg-[#1a1a1a] flex flex-col justify-center items-center px-6 py-12">
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="text-center mb-10">
        <a href="/" class="inline-flex items-center space-x-2">
          <%= render 'shared/logo_icon', size: 'md' %>
          <%= render 'shared/logo_text', size: 'md' %>
        </a>
      </div>
      
      <!-- Title -->
      <h1 class="font-display text-4xl md:text-5xl text-white text-center mb-4 tracking-wide">RESET PASSWORD</h1>
      <p class="text-gray-400 text-center mb-8">Enter your new password below.</p>
      
      <!-- Error Messages -->
      <% if resource.errors.any? %>
        <div class="bg-red-500/20 border border-red-500/50 text-red-300 px-4 py-3 rounded-xl mb-6">
          <ul class="list-disc list-inside text-sm">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        
        <!-- New Password -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">New Password</label>
          <%= f.password_field :password, 
              class: "w-full bg-[#2a2a2a] border border-gray-600 rounded-xl px-4 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-pink-400 focus:ring-1 focus:ring-pink-400 transition-colors",
              placeholder: "Enter new password",
              autofocus: true,
              autocomplete: "new-password" %>
        </div>
        
        <!-- Confirm New Password -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Confirm New Password</label>
          <%= f.password_field :password_confirmation, 
              class: "w-full bg-[#2a2a2a] border border-gray-600 rounded-xl px-4 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-pink-400 focus:ring-1 focus:ring-pink-400 transition-colors",
              placeholder: "Confirm new password",
              autocomplete: "new-password" %>
        </div>
        
        <!-- Submit Button -->
        <div class="pt-2">
          <%= f.submit "Change Password", class: "w-full bg-[#3a3a3a] hover:bg-[#4a4a4a] text-white font-medium py-4 px-6 rounded-xl flex items-center justify-center space-x-2 transition-colors cursor-pointer" %>
        </div>
      <% end %>
      
      <!-- Back to Login -->
      <p class="text-center text-gray-400 mt-8">
        Remember your password? 
        <%= link_to "Log in", new_user_session_path, class: "text-white font-semibold hover:underline" %>
      </p>
      
      <!-- Footer Links -->
      <div class="flex flex-wrap justify-center gap-x-4 gap-y-2 text-xs text-gray-500 mt-10">
        <a href="#" class="hover:text-gray-300">General Terms of Service</a>
        <a href="#" class="hover:text-gray-300">Privacy Policy</a>
        <a href="#" class="hover:text-gray-300">Content Guidelines</a>
      </div>
    </div>
  </div>
  
  <!-- Right Side - Illustration -->
  <div class="hidden lg:flex w-1/2 bg-gradient-to-br from-[#2a1a3a] via-[#1a2a3a] to-[#1a3a3a] relative overflow-hidden items-center justify-center">
    <!-- 3D Gradient Background -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Chat Bubble Top Left -->
      <div class="absolute top-20 left-20 w-40 h-32">
        <div class="relative w-full h-full">
          <div class="absolute inset-0 bg-gradient-to-br from-pink-400 via-pink-500 to-purple-500 rounded-3xl transform rotate-[-15deg] shadow-2xl"></div>
          <div class="absolute top-4 left-6 w-3 h-3 bg-pink-700/50 rounded-full"></div>
          <div class="absolute top-4 left-12 w-3 h-3 bg-pink-700/50 rounded-full"></div>
        </div>
      </div>
      
      <!-- Chat Bubble Top Right -->
      <div class="absolute top-10 right-10 w-32 h-24">
        <div class="relative w-full h-full">
          <div class="absolute inset-0 bg-gradient-to-br from-purple-400 via-purple-500 to-pink-400 rounded-2xl transform rotate-[10deg] shadow-2xl"></div>
        </div>
      </div>
      
      <!-- Heart Top Right -->
      <div class="absolute top-32 right-24 w-20 h-20">
        <div class="w-full h-full bg-gradient-to-br from-cyan-300 via-teal-400 to-purple-400 rounded-full transform rotate-45 shadow-xl">
          <div class="absolute -top-3 -left-3 w-12 h-12 bg-gradient-to-br from-cyan-300 via-teal-400 to-purple-400 rounded-full"></div>
          <div class="absolute -top-3 right-3 w-12 h-12 bg-gradient-to-br from-cyan-300 via-teal-400 to-purple-400 rounded-full"></div>
        </div>
      </div>
      
      <!-- Camera Bottom Left -->
      <div class="absolute bottom-32 left-16 w-36 h-32">
        <div class="relative w-full h-full">
          <div class="absolute inset-0 bg-gradient-to-br from-pink-400 via-pink-500 to-fuchsia-500 rounded-3xl shadow-2xl"></div>
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-14 h-14 bg-gradient-to-br from-pink-200 to-pink-300 rounded-full border-4 border-pink-600/50"></div>
          <div class="absolute top-3 right-3 w-4 h-4 bg-pink-700/50 rounded-full"></div>
        </div>
      </div>
      
      <!-- Blob Bottom Right -->
      <div class="absolute bottom-10 right-0 w-64 h-48">
        <div class="w-full h-full bg-gradient-to-br from-pink-400 via-fuchsia-400 to-purple-500 rounded-l-[80px] rounded-t-[60px] shadow-2xl opacity-80"></div>
      </div>
      
      <!-- Floating Gradient Orb -->
      <div class="absolute top-1/2 right-1/4 w-32 h-32 bg-gradient-to-br from-purple-400/50 to-cyan-400/50 rounded-full blur-xl"></div>
    </div>
    
    <!-- Main Text -->
    <div class="relative z-10 text-center px-12">
      <h2 class="font-display text-5xl md:text-6xl lg:text-7xl text-white leading-[1.1] tracking-wide">
        TALK TO<br>
        YOUR<br>
        FAVORITE<br>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 via-purple-400 to-cyan-400">CREATORS</span>
      </h2>
    </div>
  </div>
</div>
