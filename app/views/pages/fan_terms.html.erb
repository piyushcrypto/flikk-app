    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl text-black mb-4">FAN TERMS</h1>
      <p class="text-gray-600">Terms of Use for Flikk Fans</p>
    </div>

    <!-- Features Highlight -->
    <div class="bg-gradient-to-r from-cyan-100 via-purple-100 to-pink-100 rounded-3xl p-6 md:p-8 mb-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
