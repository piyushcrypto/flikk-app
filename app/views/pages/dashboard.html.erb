<script>
  document.addEventListener('turbo:load', () => {
    // Heart Shop Modal
    const modal = document.getElementById('heart-shop-modal');
    const heartBtn = document.getElementById('heart-balance-btn');
    const closeHeartModal = document.getElementById('close-heart-modal');
    const heartBackdrop = document.getElementById('heart-modal-backdrop');
    
    if (heartBtn && modal) {
      heartBtn.addEventListener('click', () => modal.classList.remove('hidden'));
      closeHeartModal?.addEventListener('click', () => modal.classList.add('hidden'));
      heartBackdrop?.addEventListener('click', () => modal.classList.add('hidden'));
    }
    
    // User Menu Toggle
    const userMenuBtn = document.getElementById('user-menu-btn');
    const userMenuDropdown = document.getElementById('user-menu-dropdown');
    
    if (userMenuBtn && userMenuDropdown) {
      userMenuBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        userMenuDropdown.classList.toggle('hidden');
      });
      document.addEventListener('click', () => userMenuDropdown.classList.add('hidden'));
    }
    
    // Mobile Navigation
    const mobileNavBtns = document.querySelectorAll('.mobile-nav-btn');
    
    function setActiveNav(section) {
      mobileNavBtns.forEach(btn => {
        btn.classList.toggle('text-pink-500', btn.dataset.section === section);
        btn.classList.toggle('text-gray-500', btn.dataset.section !== section);
      });
    }
    
    // Panel Helpers
    function openPanel(panel, content) {
      panel.classList.remove('hidden');
      setTimeout(() => {
        content.classList.remove('translate-x-full');
        content.classList.add('translate-x-0');
      }, 10);
    }
    
    function closePanel(panel, content) {
      content.classList.remove('translate-x-0');
      content.classList.add('translate-x-full');
      setTimeout(() => panel.classList.add('hidden'), 300);
    }
    
    // Messages Panel
    const messagesPanel = document.getElementById('mobile-messages-panel');
    const messagesContent = document.getElementById('mobile-messages-content');
    const messagesBackdrop = document.getElementById('mobile-messages-backdrop');
    const closeMessages = document.getElementById('close-mobile-messages');
    const desktopMessagesBtn = document.getElementById('messages-btn');
    
    document.getElementById('mobile-nav-messages')?.addEventListener('click', () => {
      setActiveNav('messages');
      openPanel(messagesPanel, messagesContent);
    });
    
    desktopMessagesBtn?.addEventListener('click', () => openPanel(messagesPanel, messagesContent));
    closeMessages?.addEventListener('click', () => closePanel(messagesPanel, messagesContent));
    messagesBackdrop?.addEventListener('click', () => closePanel(messagesPanel, messagesContent));
    
    // Profile Panel
    const profilePanel = document.getElementById('mobile-profile-panel');
    const profileContent = document.getElementById('mobile-profile-content');
    const profileBackdrop = document.getElementById('mobile-profile-backdrop');
    const closeProfile = document.getElementById('close-mobile-profile');
    
    document.getElementById('mobile-nav-profile')?.addEventListener('click', () => {
      setActiveNav('profile');
      openPanel(profilePanel, profileContent);
    });
    
    closeProfile?.addEventListener('click', () => closePanel(profilePanel, profileContent));
    profileBackdrop?.addEventListener('click', () => closePanel(profilePanel, profileContent));
    
    // Home & Discover
    document.getElementById('mobile-nav-home')?.addEventListener('click', () => {
      setActiveNav('home');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
    
    document.getElementById('mobile-nav-discover')?.addEventListener('click', () => {
      setActiveNav('discover');
      // Scroll to Popular section
      document.querySelector('section:nth-child(2)')?.scrollIntoView({ behavior: 'smooth' });
    });
  });
</script>
