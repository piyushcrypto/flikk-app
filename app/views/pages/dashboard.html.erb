<script>
  document.addEventListener('turbo:load', () => {
    // Heart Shop Modal
    const modal = document.getElementById('heart-shop-modal');
    const btn = document.getElementById('heart-balance-btn');
    const closeBtn = document.getElementById('close-heart-modal');
    const backdrop = document.getElementById('heart-modal-backdrop');
    
    if (btn && modal) {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        modal.classList.remove('hidden');
      });
      
      const closeModal = () => modal.classList.add('hidden');
      if (closeBtn) closeBtn.addEventListener('click', closeModal);
      if (backdrop) backdrop.addEventListener('click', closeModal);
    }
    
    // User Menu Click Toggle
    const userMenuBtn = document.getElementById('user-menu-btn');
    const userMenuDropdown = document.getElementById('user-menu-dropdown');
    
    if (userMenuBtn && userMenuDropdown) {
      userMenuBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        userMenuDropdown.classList.toggle('hidden');
      });
      
      document.addEventListener('click', (e) => {
        if (!userMenuDropdown.contains(e.target) && !userMenuBtn.contains(e.target)) {
          userMenuDropdown.classList.add('hidden');
        }
      });
    }
    
    // Mobile Navigation Handlers
    const mobileNavBtns = document.querySelectorAll('.mobile-nav-btn');
    const goldColor = '#D4AF37';
    const grayColor = 'rgb(107, 114, 128)'; // text-gray-500
    
    // Messages Panel
    const messagesPanel = document.getElementById('mobile-messages-panel');
    const messagesContent = document.getElementById('mobile-messages-content');
    const messagesBackdrop = document.getElementById('mobile-messages-backdrop');
    const closeMessages = document.getElementById('close-mobile-messages');
    
    // Discover Panel
    const discoverPanel = document.getElementById('mobile-discover-panel');
    const discoverContent = document.getElementById('mobile-discover-content');
    const discoverBackdrop = document.getElementById('mobile-discover-backdrop');
    const closeDiscover = document.getElementById('close-mobile-discover');
    
    // Profile Panel
    const profilePanel = document.getElementById('mobile-profile-panel');
    const profileContent = document.getElementById('mobile-profile-content');
    const profileBackdrop = document.getElementById('mobile-profile-backdrop');
    const closeProfile = document.getElementById('close-mobile-profile');
    
    function setActiveNav(section) {
      mobileNavBtns.forEach(btn => {
        if (btn.dataset.section === section) {
          btn.classList.remove('text-gray-500');
          btn.classList.add('text-[#D4AF37]');
        } else {
          btn.classList.remove('text-[#D4AF37]');
          btn.classList.add('text-gray-500');
        }
      });
    }
    
    function openPanel(panel, content, direction) {
      panel.classList.remove('hidden');
      setTimeout(() => {
        content.classList.remove(direction === 'left' ? '-translate-x-full' : 'translate-x-full');
        content.classList.add('translate-x-0');
      }, 10);
    }
    
    function closePanel(panel, content, direction) {
      content.classList.remove('translate-x-0');
      content.classList.add(direction === 'left' ? '-translate-x-full' : 'translate-x-full');
      setTimeout(() => {
        panel.classList.add('hidden');
      }, 300);
    }
    
    // Home button - scroll to top
    document.getElementById('mobile-nav-home')?.addEventListener('click', () => {
      setActiveNav('home');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
    
    // Discover button
    document.getElementById('mobile-nav-discover')?.addEventListener('click', () => {
      setActiveNav('discover');
      if (discoverPanel && discoverContent) {
        openPanel(discoverPanel, discoverContent, 'left');
      }
    });
    
    // Messages button
    document.getElementById('mobile-nav-messages')?.addEventListener('click', () => {
      setActiveNav('messages');
      if (messagesPanel && messagesContent) {
        openPanel(messagesPanel, messagesContent, 'right');
      }
    });
    
    // Profile button
    document.getElementById('mobile-nav-profile')?.addEventListener('click', () => {
      setActiveNav('profile');
      if (profilePanel && profileContent) {
        openPanel(profilePanel, profileContent, 'right');
      }
    });
    
    // Close handlers
    if (closeMessages) closeMessages.addEventListener('click', () => closePanel(messagesPanel, messagesContent, 'right'));
    if (messagesBackdrop) messagesBackdrop.addEventListener('click', () => closePanel(messagesPanel, messagesContent, 'right'));
    
    if (closeDiscover) closeDiscover.addEventListener('click', () => closePanel(discoverPanel, discoverContent, 'left'));
    if (discoverBackdrop) discoverBackdrop.addEventListener('click', () => closePanel(discoverPanel, discoverContent, 'left'));
    
    if (closeProfile) closeProfile.addEventListener('click', () => closePanel(profilePanel, profileContent, 'right'));
    if (profileBackdrop) profileBackdrop.addEventListener('click', () => closePanel(profilePanel, profileContent, 'right'));
  });
</script>
