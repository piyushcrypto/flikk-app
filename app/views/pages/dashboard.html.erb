<!-- Dashboard - 3 Row Creator Discovery Layout -->
<style>
  /* Dashboard Custom Styles */
  .dashboard-bg { background: #0a0a0a; }
  .card-bg { background: #1a1a1a; }
  .card-bg-hover:hover { background: #222222; }
  .gold-accent { color: #D4AF37; }
  .gold-bg { background: #D4AF37; }
  .gold-gradient { background: linear-gradient(135deg, #D4AF37 0%, #F4E4BC 50%, #D4AF37 100%); }
  
  /* Online pulse animation */
  @keyframes online-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
    50% { box-shadow: 0 0 0 6px rgba(34, 197, 94, 0); }
  }
  .online-ring {
    animation: online-pulse 2s infinite;
  }
  
  /* Creator card hover effect */
  .creator-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .creator-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  }
  
  /* Horizontal scroll */
  .scroll-container {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .scroll-container::-webkit-scrollbar {
    display: none;
  }
</style>

