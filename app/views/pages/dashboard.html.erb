<!-- Main Dashboard -->
<div class="pt-16 pb-20 md:pb-8 min-h-screen dashboard-bg">
  
  <!-- Live Now Horizontal Reel -->
  <div class="border-b border-gray-800 py-4">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center space-x-2 mb-3">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest">Live Now</h3>
      </div>
      <div class="flex space-x-5 overflow-x-auto pb-2 custom-scrollbar">
        <% @live_creators.each do |creator| %>
          <button class="flex-shrink-0 flex flex-col items-center space-y-2 group">
            <div class="relative">
              <div class="w-16 h-16 rounded-full p-[3px] bg-gradient-to-br from-green-400 to-emerald-600 live-ring">
                <img src="<%= creator[:avatar] %>" alt="<%= creator[:name] %>" class="w-full h-full rounded-full object-cover border-2 border-[#0a0a0a]">
              </div>
              <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 bg-green-500 text-[8px] font-bold text-white px-2 py-0.5 rounded-full uppercase tracking-wide">Live</div>
            </div>
            <span class="text-xs text-gray-400 group-hover:text-white transition-colors truncate max-w-[70px]"><%= creator[:name] %></span>
          </button>
        <% end %>
        <!-- More live placeholders -->
        <% 5.times do |i| %>
          <button class="flex-shrink-0 flex flex-col items-center space-y-2 group opacity-60">
            <div class="relative">
              <div class="w-16 h-16 rounded-full p-[3px] bg-gradient-to-br from-green-400 to-emerald-600 live-ring">
                <div class="w-full h-full rounded-full bg-gradient-to-br from-gray-700 to-gray-800 border-2 border-[#0a0a0a] flex items-center justify-center">
                  <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 24 24"><path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                </div>
              </div>
              <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 bg-green-500 text-[8px] font-bold text-white px-2 py-0.5 rounded-full uppercase tracking-wide">Live</div>
            </div>
            <span class="text-xs text-gray-500 truncate max-w-[70px]">Creator</span>
          </button>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 3-Column Layout -->
  <div class="max-w-7xl mx-auto px-4 py-6">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 lg:gap-8">
      
      <!-- LEFT PANE: Discovery -->
      <aside class="hidden md:block md:col-span-3 space-y-6">
        <div class="card-bg rounded-2xl border border-gray-800 p-4">
          <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4">Suggested for You</h3>
          <div class="space-y-3">
            <% @suggested_creators.each do |creator| %>
              <div class="flex items-center justify-between p-2 rounded-xl card-bg-hover transition-colors cursor-pointer group">
                <div class="flex items-center space-x-3">
                  <div class="relative">
                    <img src="<%= creator[:avatar] %>" alt="<%= creator[:name] %>" class="w-11 h-11 rounded-full object-cover border border-gray-700">
                  </div>
                  <div>
                    <h4 class="text-sm font-semibold text-white group-hover:text-[#D4AF37] transition-colors"><%= creator[:name] %></h4>
                    <p class="text-[10px] text-gray-500 uppercase tracking-wide"><%= ['Mumbai', 'Delhi', 'Bangalore', 'Kolkata', 'Chennai'].sample %></p>
                  </div>
                </div>
                <button class="text-[10px] font-bold gold-gradient text-black px-3 py-1.5 rounded-full hover:opacity-90 transition-opacity">
                  Follow
                </button>
              </div>
            <% end %>
            
            <!-- More suggestions -->
            <% 3.times do |i| %>
              <div class="flex items-center justify-between p-2 rounded-xl card-bg-hover transition-colors cursor-pointer group">
                <div class="flex items-center space-x-3">
                  <div class="w-11 h-11 rounded-full bg-gradient-to-br from-gray-700 to-gray-800 border border-gray-700 flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24"><path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-semibold text-gray-400">New Creator</h4>
                    <p class="text-[10px] text-gray-600 uppercase tracking-wide"><%= ['Bhojpuri', 'Marathi', 'Tamil', 'Punjabi', 'Bengali'].sample %></p>
                  </div>
                </div>
                <button class="text-[10px] font-bold bg-gray-700 text-gray-400 px-3 py-1.5 rounded-full">
                  Follow
                </button>
              </div>
            <% end %>
          </div>
          
          <button class="w-full mt-4 text-xs text-[#D4AF37] hover:text-[#F4E4BC] font-medium transition-colors">
            See all suggestions →
          </button>
        </div>
      </aside>

      <!-- CENTER PANE: Exclusive Feed -->
      <main class="col-span-1 md:col-span-6">
        <!-- Feed Tabs -->
        <div class="card-bg rounded-t-2xl border border-gray-800 border-b-0 px-4 py-3 sticky top-16 z-30">
          <div class="flex space-x-6">
            <button class="text-sm font-bold text-white border-b-2 border-[#D4AF37] pb-2">Exclusive Feed</button>
            <button class="text-sm font-medium text-gray-500 hover:text-gray-300 pb-2 transition-colors">Following</button>
          </div>
        </div>

        <!-- Feed Posts -->
        <div id="feed-container" class="space-y-0">
          <% @feed_posts.each_with_index do |post, index| %>
            <div class="card-bg border border-gray-800 <%= index == 0 ? 'rounded-t-none' : '' %> overflow-hidden">
              <!-- Post Header -->
              <div class="flex items-center justify-between p-4">
                <div class="flex items-center space-x-3">
                  <div class="relative">
                    <img src="<%= post[:creator][:avatar] %>" alt="<%= post[:creator][:name] %>" class="w-10 h-10 rounded-full object-cover border border-gray-700">
                    <% if post[:creator][:live] %>
                      <div class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-[#1a1a1a] rounded-full online-dot"></div>
                    <% end %>
                  </div>
                  <div>
                    <h4 class="font-semibold text-sm text-white"><%= post[:creator][:name] %></h4>
                    <p class="text-xs text-gray-500"><%= post[:timestamp] %></p>
                  </div>
                </div>
                <button class="text-gray-600 hover:text-gray-400 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                  </svg>
                </button>
              </div>

              <!-- Post Content -->
              <div class="px-4 pb-3">
                <p class="text-sm text-gray-300 leading-relaxed"><%= post[:content] %></p>
              </div>

              <!-- Post Media -->
              <div class="relative aspect-[4/5] w-full overflow-hidden bg-black">
                <% if post[:locked] %>
                  <!-- Locked State - Heavy Blur -->
                  <img src="<%= post[:image] %>" alt="Exclusive content" class="w-full h-full object-cover locked-blur">
                  
                  <!-- Lock Overlay -->
                  <div class="absolute inset-0 flex flex-col items-center justify-center bg-black/40 z-10">
                    <!-- Gold Lock Icon -->
                    <div class="w-20 h-20 rounded-full gold-gradient flex items-center justify-center mb-6 shadow-2xl">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-black" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    
                    <h3 class="text-white font-bold text-xl mb-2">Exclusive Content</h3>
                    <p class="text-gray-400 text-sm mb-6">Unlock to view this post</p>
                    
                    <button class="gold-gradient text-black font-bold py-3 px-8 rounded-full shadow-xl flex items-center space-x-2 hover:opacity-90 transition-opacity transform hover:scale-105">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                      </svg>
                      <span>Unlock: <%= post[:unlock_price] || 15 %> Hearts</span>
                    </button>
                  </div>
                <% else %>
                  <!-- Unlocked State -->
                  <img src="<%= post[:image] %>" alt="Post content" class="w-full h-full object-cover">
                <% end %>
              </div>

              <!-- Post Actions - Tip Only -->
              <div class="p-4 flex items-center justify-end border-t border-gray-800/50">
                <!-- Tip Button -->
                <button class="flex items-center space-x-2 gold-gradient text-black font-bold px-5 py-2 rounded-full hover:opacity-90 transition-opacity">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm">Send Tip</span>
                </button>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Loading Indicator -->
        <div id="feed-loading" class="card-bg border border-gray-800 rounded-b-2xl py-8 text-center">
          <div class="inline-flex items-center space-x-3">
            <svg class="animate-spin h-5 w-5 text-[#D4AF37]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-gray-500 text-sm">Loading more...</span>
          </div>
        </div>
      </main>

      <!-- RIGHT PANE: DMs (The Profit Zone) -->
      <aside class="hidden md:block md:col-span-3">
        <div class="card-bg rounded-2xl border border-gray-800 sticky top-24 h-[calc(100vh-7rem)] flex flex-col overflow-hidden">
          <!-- Header -->
          <div class="p-4 border-b border-gray-800">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-sm font-bold text-white">Your Private Chats</h3>
              <span class="text-[10px] bg-red-500 text-white px-2 py-0.5 rounded-full font-bold"><%= @active_chats.count %></span>
            </div>
            <div class="relative">
              <input type="text" placeholder="Search conversations..." class="w-full bg-[#0a0a0a] border border-gray-700 rounded-lg py-2 pl-9 pr-4 text-xs text-white placeholder-gray-600 focus:outline-none focus:border-[#D4AF37] transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-gray-600 absolute left-3 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>

          <!-- Chat List -->
          <div class="flex-1 overflow-y-auto custom-scrollbar">
            <% if @active_chats.any? %>
              <% @active_chats.each_with_index do |chat, index| %>
                <div class="flex items-center space-x-3 p-4 hover:bg-[#252525] cursor-pointer transition-colors border-b border-gray-800/50 relative">
                  <div class="relative flex-shrink-0">
                    <img src="<%= chat[:creator][:avatar] %>" alt="<%= chat[:creator][:name] %>" class="w-12 h-12 rounded-full object-cover border border-gray-700">
                    <% if chat[:creator][:live] %>
                      <div class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-[#1a1a1a] rounded-full online-dot"></div>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center justify-between mb-1">
                      <h4 class="text-sm font-semibold text-white truncate"><%= chat[:creator][:name] %></h4>
                      <span class="text-[10px] text-gray-500"><%= chat[:time] %></span>
                    </div>
                    <p class="text-xs text-gray-500 truncate"><%= chat[:last_message] %></p>
                  </div>
                  <!-- Unread Badge -->
                  <% if index < 2 %>
                    <div class="w-5 h-5 bg-red-500 rounded-full flex items-center justify-center">
                      <span class="text-[10px] font-bold text-white"><%= rand(1..5) %></span>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <!-- Start New Chat CTA -->
          <div class="p-4 border-t border-gray-800">
            <button class="w-full py-3 gold-gradient text-black text-sm font-bold rounded-xl hover:opacity-90 transition-opacity flex items-center justify-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
              </svg>
              <span>Start a Conversation • 5 Hearts</span>
            </button>
          </div>
        </div>
      </aside>

    </div>
  </div>
</div>

