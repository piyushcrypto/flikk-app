      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-3">
          <div class="w-3 h-3 bg-green-500 rounded-full online-ring"></div>
          <h2 class="text-xl md:text-2xl font-bold text-white">Creators Online</h2>
          <span class="text-sm text-gray-500">(<%= @online_creators.count %> live)</span>
        </div>
        <button class="text-sm text-pink-500 hover:text-pink-400 font-medium transition-colors">See all →</button>
      </div>
      
      <div class="flex space-x-4 overflow-x-auto scroll-container pb-4">
        <% @online_creators.each do |creator| %>
          <div class="creator-card flex-shrink-0 w-[280px] md:w-[320px] card-bg rounded-2xl overflow-hidden border border-gray-800 cursor-pointer">
            <!-- Cover Image -->
            <div class="relative h-32 md:h-40 overflow-hidden">
              <img src="<%= creator[:cover] %>" alt="<%= creator[:name] %>" class="w-full h-full object-cover">
              <div class="absolute inset-0 bg-gradient-to-t from-[#1a1a1a] to-transparent"></div>
              
              <!-- Online Badge -->
              <div class="absolute top-3 right-3 bg-green-500 text-white text-[10px] font-bold px-2 py-1 rounded-full flex items-center space-x-1">
                <div class="w-1.5 h-1.5 bg-white rounded-full animate-pulse"></div>
                <span>LIVE</span>
              </div>
              
              <!-- Category -->
              <div class="absolute top-3 left-3 bg-black/60 backdrop-blur-sm text-white text-[10px] font-medium px-2 py-1 rounded-full">
                <%= creator[:category] %>
              </div>
            </div>
            
            <!-- Creator Info -->
            <div class="p-4 -mt-8 relative">
              <div class="flex items-end space-x-3">
                <div class="relative">
                  <img src="<%= creator[:avatar] %>" alt="<%= creator[:name] %>" class="w-16 h-16 rounded-full object-cover border-4 border-[#1a1a1a]">
                  <div class="absolute bottom-1 right-1 w-4 h-4 bg-green-500 border-2 border-[#1a1a1a] rounded-full"></div>
                </div>
                <div class="flex-1 pb-1">
                  <h3 class="font-bold text-white text-base truncate"><%= creator[:name] %></h3>
                  <p class="text-xs text-gray-500"><%= creator[:handle] %></p>
                </div>
              </div>
              
              <div class="flex items-center justify-between mt-4">
                <span class="text-xs text-gray-400"><%= creator[:followers] %> followers</span>
                <button class="bg-gradient-to-r from-pink-500 to-purple-600 text-white text-xs font-bold px-4 py-2 rounded-full hover:opacity-90 transition-opacity">
                  Message
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- ROW 2: Popular Creators -->
