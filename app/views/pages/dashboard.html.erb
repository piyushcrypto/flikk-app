      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <h2 class="text-xl md:text-2xl font-bold text-white">Popular Creators</h2>
        </div>
        <button class="text-sm text-pink-500 hover:text-pink-400 font-medium transition-colors">See all →</button>
      </div>
      
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
        <% @popular_creators.each do |creator| %>
          <div class="creator-card card-bg rounded-2xl overflow-hidden border border-gray-800 cursor-pointer">
            <!-- Cover -->
            <div class="relative h-24 overflow-hidden">
              <img src="<%= creator[:cover] %>" alt="<%= creator[:name] %>" class="w-full h-full object-cover">
              <div class="absolute inset-0 bg-gradient-to-t from-[#1a1a1a] to-transparent"></div>
              
              <% if creator[:online] %>
                <div class="absolute top-2 right-2 w-3 h-3 bg-green-500 rounded-full border-2 border-[#1a1a1a]"></div>
              <% end %>
            </div>
            
            <!-- Info -->
            <div class="p-3 -mt-6 relative">
              <img src="<%= creator[:avatar] %>" alt="<%= creator[:name] %>" class="w-12 h-12 rounded-full object-cover border-3 border-[#1a1a1a] mb-2">
              <h3 class="font-bold text-white text-sm truncate"><%= creator[:name] %></h3>
              <p class="text-[10px] text-gray-500 truncate"><%= creator[:handle] %></p>
              <div class="flex items-center justify-between mt-3">
                <span class="text-[10px] text-gray-400"><%= creator[:followers] %></span>
                <button class="bg-white/10 hover:bg-white/20 text-white text-[10px] font-bold px-3 py-1.5 rounded-full transition-colors">
                  Follow
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- ROW 3: Following / Suggestions -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-3">
          <% if @following_creators.any? %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
            </svg>
            <h2 class="text-xl md:text-2xl font-bold text-white">Creators You Follow</h2>
          <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500" viewBox="0 0 20 20" fill="currentColor">
              <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
              <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
            </svg>
            <h2 class="text-xl md:text-2xl font-bold text-white">Suggested for You</h2>
          <% end %>
        </div>
        <button class="text-sm text-pink-500 hover:text-pink-400 font-medium transition-colors">See all →</button>
      </div>
      
      <% creators_to_show = @following_creators.any? ? @following_creators : @suggested_creators %>
      
      <div class="flex space-x-4 overflow-x-auto scroll-container pb-4">
        <% creators_to_show.each do |creator| %>
          <div class="creator-card flex-shrink-0 w-[280px] md:w-[320px] card-bg rounded-2xl overflow-hidden border border-gray-800 cursor-pointer">
            <!-- Cover Image -->
            <div class="relative h-32 md:h-40 overflow-hidden">
              <img src="<%= creator[:cover] %>" alt="<%= creator[:name] %>" class="w-full h-full object-cover">
              <div class="absolute inset-0 bg-gradient-to-t from-[#1a1a1a] to-transparent"></div>
              
              <% if creator[:online] %>
                <div class="absolute top-3 right-3 bg-green-500 text-white text-[10px] font-bold px-2 py-1 rounded-full flex items-center space-x-1">
                  <div class="w-1.5 h-1.5 bg-white rounded-full animate-pulse"></div>
                  <span>LIVE</span>
                </div>
              <% end %>
              
              <div class="absolute top-3 left-3 bg-black/60 backdrop-blur-sm text-white text-[10px] font-medium px-2 py-1 rounded-full">
                <%= creator[:category] %>
              </div>
            </div>
            
            <!-- Creator Info -->
            <div class="p-4 -mt-8 relative">
              <div class="flex items-end space-x-3">
                <div class="relative">
                  <img src="<%= creator[:avatar] %>" alt="<%= creator[:name] %>" class="w-16 h-16 rounded-full object-cover border-4 border-[#1a1a1a]">
                  <% if creator[:online] %>
                    <div class="absolute bottom-1 right-1 w-4 h-4 bg-green-500 border-2 border-[#1a1a1a] rounded-full"></div>
                  <% end %>
                </div>
                <div class="flex-1 pb-1">
                  <h3 class="font-bold text-white text-base truncate"><%= creator[:name] %></h3>
                  <p class="text-xs text-gray-500"><%= creator[:handle] %></p>
                </div>
              </div>
              
              <div class="flex items-center justify-between mt-4">
                <span class="text-xs text-gray-400"><%= creator[:followers] %> followers</span>
                <% if @following_creators.any? %>
                  <button class="bg-gradient-to-r from-pink-500 to-purple-600 text-white text-xs font-bold px-4 py-2 rounded-full hover:opacity-90 transition-opacity">
                    Message
                  </button>
                <% else %>
                  <button class="bg-white text-black text-xs font-bold px-4 py-2 rounded-full hover:bg-gray-100 transition-colors">
                    Follow
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>

  </div>
</div>

