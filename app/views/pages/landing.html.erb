<!-- Hero Parallax JavaScript - Desktop only -->
<script>
(function() {
  let scrollHandler = null;
  
  function initParallax() {
    const cardsRow1 = document.getElementById('cards-row-1');
    const cardsRow2 = document.getElementById('cards-row-2');
    
    // Remove previous scroll handler if exists
    if (scrollHandler) {
      window.removeEventListener('scroll', scrollHandler);
    }
    
    function handleHeroParallax() {
      // Only apply parallax on desktop (md breakpoint = 768px)
      if (window.innerWidth < 768) {
        // Reset transforms on mobile
        if (cardsRow1) {
          cardsRow1.querySelectorAll('.creator-card-v2').forEach((card) => {
            card.style.transform = '';
          });
        }
        if (cardsRow2) {
          cardsRow2.querySelectorAll('.creator-card-v2').forEach((card) => {
            card.style.transform = '';
          });
        }
        return;
      }
      
      const scrollY = window.scrollY;
      
      if (cardsRow1) {
        const cards1 = cardsRow1.querySelectorAll('.creator-card-v2');
        cards1.forEach((card) => {
          const parallaxFactor = parseFloat(card.dataset.parallax) || 0.1;
          const translateY = scrollY * parallaxFactor * -1;
          card.style.transform = `translateY(${translateY}px)`;
        });
      }
      
      if (cardsRow2) {
        const cards2 = cardsRow2.querySelectorAll('.creator-card-v2');
        cards2.forEach((card) => {
          const parallaxFactor = parseFloat(card.dataset.parallax) || 0.1;
          const translateY = scrollY * parallaxFactor * 0.5;
          card.style.transform = `translateY(${translateY}px)`;
        });
      }
    }
    
    scrollHandler = handleHeroParallax;
    window.addEventListener('scroll', handleHeroParallax, { passive: true });
    window.addEventListener('resize', handleHeroParallax, { passive: true });
    handleHeroParallax();
  }
  
  // Run on initial page load
  document.addEventListener('DOMContentLoaded', initParallax);
  
  // Run on Turbo navigation (when navigating back)
  document.addEventListener('turbo:load', initParallax);
  
  // Also run on turbo:render for cached pages
  document.addEventListener('turbo:render', initParallax);
})();
</script>

