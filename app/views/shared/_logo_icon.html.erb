<%# Icon logo: kk with mirrored second k in a rounded box %>
<%# Usage: render 'shared/logo_icon', size: 'md' (sm, md, lg) %>
<% size ||= 'md' %>
<% 
  size_classes = {
    'sm' => 'w-10 h-10',
    'md' => 'w-12 h-12 md:w-14 md:h-14',
    'lg' => 'w-14 h-14 md:w-16 md:h-16'
  }
  text_sizes = {
    'sm' => 'text-lg',
    'md' => 'text-xl md:text-2xl',
    'lg' => 'text-2xl md:text-3xl'
  }
%>
<div class="<%= size_classes[size] %> rounded-2xl bg-gradient-to-br from-pink-300 via-pink-400 to-purple-400 flex items-center justify-center shadow-lg">
  <span class="logo-icon-kk <%= text_sizes[size] %> text-white">k<span class="mirror-k">k</span></span>
</div>
