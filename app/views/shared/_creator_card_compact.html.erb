<%# Creator Card - Compact Version for Grid %>
<%# Usage: render 'shared/creator_card_compact', creator: @creator %>

<%= link_to public_profile_path(creator.username), class: "creator-card card-bg rounded-xl overflow-hidden border border-gray-800 block text-center p-4" do %>
  <!-- Avatar -->
  <div class="relative w-20 h-20 mx-auto mb-3">
    <div class="w-20 h-20 rounded-full overflow-hidden border-2 border-gray-700 <%= creator.is_live? ? 'online-ring' : '' %>">
      <% if creator.avatar.attached? %>
        <%= image_tag creator.avatar, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center">
          <span class="text-white font-bold text-xl"><%= creator.name.first.upcase %></span>
        </div>
      <% end %>
    </div>
    <% if creator.is_live? %>
      <div class="absolute bottom-0 right-0 w-4 h-4 bg-green-500 border-2 border-[#1a1a1a] rounded-full"></div>
    <% end %>
  </div>
  
  <!-- Info -->
  <h3 class="font-bold text-white text-sm truncate"><%= creator.name %></h3>
  <p class="text-xs text-gray-400 truncate"><%= creator.display_handle %></p>
  
  <div class="mt-2 flex items-center justify-center space-x-2">
    <span class="text-xs text-gray-500"><%= creator.formatted_followers %></span>
    
    <% if creator.instagram_handle.present? %>
      <button onclick="event.preventDefault(); event.stopPropagation(); openInstagram('<%= creator.instagram_url %>')" 
