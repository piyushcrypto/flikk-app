<!-- Creator Dashboard -->
<style>
  .dashboard-bg { background: #0a0a0a; }
  .card-bg { background: #1a1a1a; }
  
  @keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
    50% { box-shadow: 0 0 20px 5px rgba(239, 68, 68, 0.3); }
  }
  .live-button-active { animation: pulse-glow 2s infinite; }
</style>

<!-- Navbar -->
<nav class="fixed top-0 left-0 right-0 z-50 dashboard-bg border-b border-gray-800 h-16">
  <div class="max-w-7xl mx-auto px-4 h-full flex items-center justify-between">
    <div class="flex items-center">
      <%= link_to creator_dashboard_path, class: "flex items-center space-x-2" do %>
        <%= render 'shared/logo_icon', size: 'sm' %>
        <span class="logo-text text-xl sm:text-2xl bg-gradient-to-r from-pink-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">flik<span class="mirror-k" style="background: inherit; -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">k</span></span>
      <% end %>
      <span class="hidden sm:inline-block ml-4 px-3 py-1 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full text-xs font-bold text-white">CREATOR</span>
    </div>

    <div class="flex items-center space-x-4">
      <!-- Go Live Button -->
      <% if @creator.is_live? %>
        <%= button_to creator_go_offline_path, method: :post, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-full flex items-center space-x-2 live-button-active transition-all" do %>
          <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
          <span class="font-bold text-sm">LIVE NOW</span>
        <% end %>
      <% else %>
        <%= button_to creator_go_live_path, method: :post, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-full flex items-center space-x-2 transition-all" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span class="font-bold text-sm">Go Live</span>
        <% end %>
      <% end %>

      <!-- Profile Link -->
      <%= link_to creator_profile_path, class: "text-gray-400 hover:text-white transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      <% end %>

      <!-- User Menu -->
      <div class="relative" id="user-menu-container">
        <button id="user-menu-btn" class="flex items-center space-x-2 focus:outline-none">
          <div class="w-9 h-9 rounded-full overflow-hidden border-2 border-pink-500">
            <% if @creator.avatar.attached? %>
              <%= image_tag @creator.avatar, class: "w-full h-full object-cover" %>
            <% else %>
              <div class="w-full h-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center">
                <span class="text-white font-bold text-sm"><%= @creator.name.first.upcase %></span>
              </div>
            <% end %>
          </div>
        </button>
        <div id="user-menu-dropdown" class="absolute right-0 mt-2 w-56 card-bg rounded-xl shadow-2xl border border-gray-800 py-2 hidden">
          <div class="px-4 py-3 border-b border-gray-800">
            <p class="text-sm font-bold text-white"><%= @creator.name %></p>
            <p class="text-xs text-gray-500"><%= @creator.display_handle %></p>
          </div>
          <%= link_to public_profile_path(@creator.username), class: "block px-4 py-2.5 text-sm text-gray-300 hover:bg-[#252525] hover:text-white transition-colors" do %>
            <span class="flex items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
              <span>View Public Profile</span>
            </span>
          <% end %>
          <%= link_to creator_profile_path, class: "block px-4 py-2.5 text-sm text-gray-300 hover:bg-[#252525] hover:text-white transition-colors" do %>
            <span class="flex items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
              <span>Edit Profile</span>
            </span>
          <% end %>
          <div class="border-t border-gray-800 mt-2 pt-2">
            <%= button_to destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2.5 text-sm text-red-400 hover:bg-red-500/10 transition-colors" do %>
              <span class="flex items-center space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                <span>Log out</span>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="pt-20 pb-8 min-h-screen dashboard-bg text-white">
  <div class="max-w-7xl mx-auto px-4">
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <div class="card-bg rounded-xl p-4 border border-gray-800">
        <div class="text-2xl mb-2">ðŸ’°</div>
        <p class="text-2xl font-bold text-white">â‚¹<%= @total_earnings %></p>
        <p class="text-xs text-gray-400">Total Earnings</p>
      </div>
      <div class="card-bg rounded-xl p-4 border border-gray-800">
        <div class="text-2xl mb-2">ðŸ’¬</div>
        <p class="text-2xl font-bold text-white"><%= @total_messages %></p>
        <p class="text-xs text-gray-400">Messages</p>
      </div>
      <div class="card-bg rounded-xl p-4 border border-gray-800">
        <div class="text-2xl mb-2">ðŸ‘¥</div>
        <p class="text-2xl font-bold text-white"><%= @total_followers %></p>
        <p class="text-xs text-gray-400">Followers</p>
      </div>
      <div class="card-bg rounded-xl p-4 border border-gray-800">
        <div class="text-2xl mb-2"><%= @creator.is_live? ? 'ðŸ”´' : 'âš«' %></div>
        <p class="text-2xl font-bold text-white"><%= @creator.is_live? ? 'LIVE' : 'Offline' %></p>
        <p class="text-xs text-gray-400">Status</p>
      </div>
    </div>

    <!-- Messages Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-white flex items-center space-x-2">
          <span>ðŸ’¬</span>
          <span>Messages</span>
          <% if @unread_messages_count > 0 %>
            <span class="px-2 py-0.5 bg-pink-500 text-white text-xs font-bold rounded-full"><%= @unread_messages_count %></span>
          <% end %>
        </h2>
        <%= link_to conversations_path, class: "text-pink-400 hover:text-pink-300 text-sm font-medium" do %>
          View All â†’
        <% end %>
      </div>
      
      <% if @conversations.any? %>
        <div class="space-y-3">
          <% @conversations.each do |conversation| %>
            <% fan = conversation.fan %>
            <%= link_to conversation_path(conversation), class: "block card-bg rounded-xl p-4 border border-gray-800 hover:border-pink-500/50 transition-colors" do %>
              <div class="flex items-center space-x-4">
                <div class="relative flex-shrink-0">
                  <div class="w-12 h-12 rounded-full overflow-hidden">
                    <% if fan.avatar.attached? %>
                      <%= image_tag fan.avatar, class: "w-full h-full object-cover" %>
                    <% else %>
                      <div class="w-full h-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center">
                        <span class="text-white font-bold"><%= fan.name.first.upcase %></span>
                      </div>
                    <% end %>
                  </div>
                </div>
                
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <h3 class="font-bold text-white"><%= fan.name %></h3>
                    <% if conversation.last_message_at %>
                      <span class="text-xs text-gray-500"><%= time_ago_in_words(conversation.last_message_at) %></span>
                    <% end %>
                  </div>
                  <p class="text-sm text-gray-400 truncate"><%= conversation.last_message_preview || "No messages yet" %></p>
                </div>
                
                <% if conversation.unread_count_for(current_user) > 0 %>
                  <span class="px-2 py-1 bg-pink-500 text-white text-xs font-bold rounded-full">
                    <%= conversation.unread_count_for(current_user) %>
                  </span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="card-bg rounded-xl p-12 text-center border border-gray-800">
          <div class="text-6xl mb-4">ðŸ“­</div>
          <h3 class="text-xl font-bold text-white mb-2">No messages yet</h3>
          <p class="text-gray-400 mb-6">When fans send you messages, they'll appear here.</p>
          
          <% unless @creator.is_live? %>
            <p class="text-sm text-gray-500 mb-4">Tip: Go live to let fans know you're available!</p>
            <%= button_to creator_go_live_path, method: :post, class: "inline-flex items-center space-x-2 bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-full transition-all" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              <span class="font-bold">Go Live Now</span>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Services Section -->
    <div class="mt-8">
      <h2 class="text-xl font-bold text-white mb-4">Your Services</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @creator.creator_services.active.each do |service| %>
          <div class="card-bg rounded-xl p-4 border border-gray-800">
            <p class="font-bold text-white"><%= service.service_type.titleize %></p>
            <p class="text-sm text-gray-400">
              <% if service.price_per_message.to_f > 0 %>
                â‚¹<%= service.price_per_message %>/msg
              <% elsif service.price_per_slot.to_f > 0 %>
                â‚¹<%= service.price_per_slot %>/slot
              <% else %>
                Price not set
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

