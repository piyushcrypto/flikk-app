<%# Creator Onboarding - Complete! %>
<div class="min-h-screen bg-[#0a0a0a] flex items-center justify-center py-8 px-4">
  <div class="max-w-lg mx-auto text-center">
    
    <!-- Creator Avatar with Success Badge -->
    <div class="mb-8">
      <div class="relative w-28 h-28 mx-auto">
        <div class="w-28 h-28 rounded-full overflow-hidden border-4 border-gradient-to-r from-pink-500 to-purple-600 shadow-lg shadow-pink-500/30">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-pink-500 to-purple-600 flex items-center justify-center">
              <span class="text-3xl font-bold text-white"><%= current_user.name.first.upcase %></span>
            </div>
          <% end %>
        </div>
        <div class="absolute -bottom-1 -right-1 w-10 h-10 bg-green-500 rounded-full flex items-center justify-center border-4 border-[#0a0a0a] animate-bounce">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
    </div>
    
    <!-- Message -->
    <h1 class="text-3xl font-bold text-white mb-4">You're All Set! ðŸŽ‰</h1>
    <p class="text-gray-400 text-lg mb-8">
      Welcome to flikk, <strong class="text-white">@<%= current_user.username %></strong>!<br>
      Your creator profile is now live.
    </p>
    
    <!-- Summary Card -->
    <div class="bg-[#1a1a1a] rounded-2xl border border-gray-800 p-6 mb-8 text-left">
      <h3 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">Your Setup</h3>
      
      <div class="space-y-4">
        <!-- Services -->
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 rounded-lg bg-pink-500/20 flex items-center justify-center flex-shrink-0">
            <span class="text-lg">âš¡</span>
          </div>
          <div>
            <h4 class="text-sm font-medium text-white">Services</h4>
            <p class="text-xs text-gray-500">
              <%= current_user.creator_services.active.map(&:label).join(', ') %>
            </p>
          </div>
        </div>
        
        <!-- Availability -->
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 rounded-lg bg-green-500/20 flex items-center justify-center flex-shrink-0">
            <span class="text-lg">ðŸ“…</span>
          </div>
          <div>
            <h4 class="text-sm font-medium text-white">Availability</h4>
            <p class="text-xs text-gray-500">
              <% slots_count = current_user.availability_slots.count %>
              <% if slots_count > 0 %>
                <%= slots_count %> slots across <%= current_user.availability_slots.select(:day_of_week).distinct.count %> days
              <% else %>
                Dynamic pricing enabled
              <% end %>
            </p>
          </div>
        </div>
        
        <!-- Profile URL -->
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center flex-shrink-0">
            <span class="text-lg">ðŸ”—</span>
          </div>
          <div>
            <h4 class="text-sm font-medium text-white">Your Link</h4>
            <p class="text-xs text-pink-500">flikk.co.in/<%= current_user.username %></p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- CTA -->
    <%= link_to dashboard_path, class: "inline-flex items-center space-x-2 py-4 px-8 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-bold rounded-xl hover:opacity-90 transition-opacity" do %>
      <span>Go to Dashboard</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    <% end %>
    
    <p class="text-gray-500 text-sm mt-6">
      You can update your settings anytime from your dashboard.
    </p>
    
  </div>
</div>

<style>
  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-bounce {
    animation: bounce 1s ease-in-out 3;
  }
</style>

