<%# Onboarding Progress Indicator %>
<div class="flex items-center justify-center mb-8">
  <div class="flex items-center space-x-4">
    <% [
      { step: 1, label: 'Profile', icon: 'ðŸ‘¤' },
      { step: 2, label: 'Services', icon: 'âš¡' },
      { step: 3, label: 'Availability', icon: 'ðŸ“…' }
    ].each_with_index do |item, index| %>
      <% is_current = current_user.current_onboarding_step == item[:step] %>
      <% is_completed = current_user.current_onboarding_step > item[:step] %>
      
      <div class="flex items-center">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full flex items-center justify-center text-lg
            <%= is_completed ? 'bg-green-500 text-white' : is_current ? 'bg-gradient-to-r from-pink-500 to-purple-600 text-white' : 'bg-gray-800 text-gray-500' %>">
            <% if is_completed %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            <% else %>
              <%= item[:icon] %>
            <% end %>
          </div>
          <span class="text-xs mt-2 <%= is_current || is_completed ? 'text-white' : 'text-gray-500' %>"><%= item[:label] %></span>
        </div>
        
        <% unless index == 2 %>
          <div class="w-16 h-0.5 mx-2 <%= is_completed ? 'bg-green-500' : 'bg-gray-800' %>"></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

